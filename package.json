{
  "name": "linkat",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "all": "run-s build format test",
    "build": "run-p -s build:*",
    "build:remix": "remix vite:build",
    "build:server": "node ./scripts/build-server.js",
    "dev": "pnpm setup-dev && pnpm run-p -l dev:*",
    "dev:atproto": "cd atproto && make run-dev-env",
    "dev:prisma": "prisma studio --browser none",
    "dev:remix": "NODE_ENV=development tsx watch --ignore vite.config.ts.* --env-file .env ./app/server.ts",
    "e2e": "playwright test",
    "format": "pnpm _eslint --fix && prettier . --write",
    "lint": "pnpm _eslint && prettier . --check",
    "postinstall": "./scripts/postinstall.sh",
    "prepare": "husky",
    "setup-dev": "./scripts/setup-dev.sh",
    "start": "NODE_ENV=production node ./dist/server.js",
    "start:e2e": "pnpm run-p -l dev:atproto start:local",
    "start:local": "wait-on http-get://localhost:2583 && NODE_ENV=development E2E=1 tsx --env-file .env ./app/server.ts",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@atproto/api": "0.13.7",
    "@atproto/identity": "0.4.1",
    "@atproto/jwk-jose": "^0.1.2",
    "@atproto/lexicon": "0.4.1",
    "@atproto/oauth-client-node": "0.1.1",
    "@atproto/repo": "0.5.1",
    "@atproto/xrpc": "0.6.2",
    "@atproto/xrpc-server": "0.6.4",
    "@conform-to/react": "1.2.2",
    "@conform-to/zod": "1.2.2",
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@heroicons/react": "2.1.5",
    "@prisma/client": "5.19.1",
    "@remix-run/express": "2.12.1",
    "@remix-run/node": "2.12.1",
    "@remix-run/react": "2.12.1",
    "@skyware/jetstream": "^0.2.0",
    "@t3-oss/env-core": "0.11.1",
    "@vercel/og": "^0.6.3",
    "clsx": "2.1.1",
    "emoji-mart": "^5.6.0",
    "express": "4.21.0",
    "i18next": "^23.15.2",
    "i18next-browser-languagedetector": "^8.0.0",
    "isbot": "5.1.17",
    "jotai": "2.10.0",
    "morgan": "1.10.0",
    "prisma": "5.19.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^15.0.2",
    "react-movable": "3.3.1",
    "remix-i18next": "^6.4.1",
    "remix-utils": "7.7.0",
    "tailwind-merge": "2.5.2",
    "ws": "^8.18.0",
    "zod": "3.23.8",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@atproto/lex-cli": "0.5.0",
    "@flydotio/dockerfile": "0.5.8",
    "@mkizka/eslint-config": "5.3.2",
    "@mkizka/eslint-plugin-aaa": "1.0.2",
    "@playwright/test": "1.47.2",
    "@quramy/prisma-fabbrica": "2.2.1",
    "@remix-run/dev": "2.12.1",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@types/node": "22.5.5",
    "@types/react": "18.3.8",
    "@types/react-dom": "18.3.0",
    "@types/umami": "^2.10.0",
    "@types/ws": "^8.5.12",
    "@vitest/coverage-v8": "2.1.1",
    "autoprefixer": "10.4.20",
    "daisyui": "4.12.10",
    "esbuild": "0.24.0",
    "eslint": "9.11.0",
    "giget": "1.2.3",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "msw": "2.4.9",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "prettier-plugin-pkg": "0.18.1",
    "tailwindcss": "3.4.12",
    "tailwindcss-animate": "1.0.7",
    "tsx": "4.19.1",
    "typescript": "5.6.2",
    "vite": "5.4.7",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.1.1",
    "vitest-environment-vprisma": "1.3.0",
    "vitest-mock-extended": "2.0.2",
    "wait-on": "8.0.1"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": "eslint --cache --cache-location ./node_modules/.cache/eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  }
}
