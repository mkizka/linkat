{
  "name": "linkat",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "all": "run-s build format test",
    "build": "pnpm -s typecheck && run-p -s build:*",
    "build:remix": "remix vite:build",
    "build:server": "node ./scripts/build-server.js",
    "dev": "pnpm setup-dev && pnpm run-p -l dev:*",
    "dev:atproto": "cd atproto && make run-dev-env",
    "dev:prisma": "prisma studio --browser none",
    "dev:remix": "NODE_ENV=development tsx watch --ignore vite.config.ts.* --env-file .env ./app/server.ts",
    "e2e": "playwright test",
    "format": "pnpm _eslint --fix && prettier . --write",
    "lint": "pnpm _eslint && prettier . --check",
    "postinstall": "./scripts/postinstall.sh",
    "prepare": "husky",
    "setup-dev": "./scripts/setup-dev.sh",
    "start": "NODE_ENV=production node ./dist/server.js",
    "start:e2e": "pnpm run-p -l dev:atproto start:local",
    "start:local": "wait-on http-get://localhost:2583 && NODE_ENV=production tsx --env-file .env ./app/server.ts",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@atproto/api": "^0.13.1",
    "@atproto/lexicon": "^0.4.1",
    "@atproto/repo": "^0.4.2",
    "@atproto/xrpc": "^0.6.0",
    "@atproto/xrpc-server": "^0.6.2",
    "@conform-to/react": "^1.1.5",
    "@conform-to/zod": "^1.1.5",
    "@heroicons/react": "^2.1.5",
    "@prisma/client": "^5.18.0",
    "@remix-run/express": "^2.11.2",
    "@remix-run/node": "^2.11.2",
    "@remix-run/react": "^2.11.2",
    "@t3-oss/env-core": "^0.11.0",
    "clsx": "^2.1.1",
    "express": "^4.19.2",
    "isbot": "^5.1.17",
    "jotai": "^2.9.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-movable": "^3.3.1",
    "remix-utils": "^7.6.0",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.1"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.5.0",
    "@flydotio/dockerfile": "^0.5.8",
    "@mkizka/eslint-config": "^5.3.1",
    "@mkizka/eslint-plugin-aaa": "^1.0.2",
    "@playwright/test": "^1.46.1",
    "@quramy/prisma-fabbrica": "^2.2.1",
    "@remix-run/dev": "^2.11.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.4.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^2.0.5",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.10",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.0",
    "giget": "^1.2.3",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "msw": "^2.3.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prettier-plugin-pkg": "^0.18.1",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5",
    "vitest-environment-vprisma": "^1.3.0",
    "vitest-mock-extended": "^2.0.0",
    "wait-on": "^8.0.0"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  }
}
